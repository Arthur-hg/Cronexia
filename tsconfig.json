{
  "include": ["./src"],
  "exclude": [".import","node_modules"],
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext", "DOM"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "resolveJsonModule": true,
    "declaration": true,
    "outDir": "./out",
    "isolatedModules": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react"
  }
}
